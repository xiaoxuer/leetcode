*/

    int mySqrt(int x) {
        long long high = x;
        long long low = 0;
        if(x <= 0) return 0;
        if(x == 1) return 1;
        while(high - low > 1) {
            long long mid = low + (high - low) / 2;
            if(mid * mid <= x) {
                low = mid;
            } else
                high = mid;
        }
        return low;
    }
};
